{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "*.spec.ts"
  ]
}